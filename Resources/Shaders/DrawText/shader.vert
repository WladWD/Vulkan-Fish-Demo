#version 450
#extension GL_ARB_separate_shader_objects : enable
/////////////////////////////////////////////////////////////////////////////////////
layout(location = 0) in vec3 vPosition;
/////////////////////////////////////////////////////////////////////////////////////
//Push constant
layout (push_constant) uniform push_constants_t {
	vec4 scaleOffset;
} push_constants;
/////////////////////////////////////////////////////////////////////////////////////
layout(location = 0) out vec2 texCoord;
/////////////////////////////////////////////////////////////////////////////////////
void main() {
	vec2 pos = push_constants.scaleOffset.xy * vPosition.xy + push_constants.scaleOffset.zw;
	gl_Position = vec4(pos, vPosition.z, 1.0);
	texCoord = vPosition.xy * 0.5 + vec2(0.5);
}

	